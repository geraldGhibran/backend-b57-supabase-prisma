{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "./",                                  
    "paths": {
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    },
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "./src/**/*",
    "test/**/*.ts", "src/index.ts",
  ],
}
